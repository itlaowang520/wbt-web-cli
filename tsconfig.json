{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
          "ES2019",
          "DOM"
      ],
      "target": "ES2019",
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "removeComments": true,
      "strict": true,
      "alwaysStrict": true,
      "outDir": "output",
      "rootDir": "./",
      "noUnusedLocals": true,
      "allowJs": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
  },
  "exclude": [
      "node_modules"
  ]
}